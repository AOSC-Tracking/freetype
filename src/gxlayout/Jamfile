SubDir  FT2_TOP $(FT2_SRC_DIR) gxlayout ;

{
  local  _sources ;

  if $(FT2_MULTI)
  {
    _sources = gxdriver gxload gxobjs gxlayout gxaccess gxfeatreg gxlfeatreg gxstatetbl gxlookuptbl gxvm gxutils
  }
  else
  {
    _sources = gx ;
  }

  Library  $(FT2_LIB) : $(_sources).c ;
}

