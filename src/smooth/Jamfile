# FreeType 2 src/smooth Jamfile (c) 2001 David Turner
#

SubDir  FT2_TOP src smooth ;

SubDirHdrs  [ FT2_SubDir  src smooth ] ;

{
  local  _sources ;

  if $(FT2_MULTI)
  {
    _sources = ftgrays.c ftsmooth.c ;
  }
  else
  {
    _sources = smooth.c ;
  }

  Library  $(FT2_LIB) : $(_sources) ;
}

# end of src/smooth Jamfile
