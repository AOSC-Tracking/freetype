# FreeType 2 src/raster Jamfile (c) 2001 David Turner
#

SubDir  FT2_TOP src raster ;

SubDirHdrs  [ FT2_SubDir  src raster ] ;

{
  local  _sources ;

  if $(FT2_MULTI)
  {
    _sources = ftraster.c ftrend1.c ;
  }
  else
  {
    _sources = raster.c ;
  }

  Library  $(FT2_LIB) : $(_sources) ;
}

# end of src/raster Jamfile
