##
## FreeType 2 src/otlayout Jamfile (c) 2004 David Turner
##

SubDir  FT2_TOP $(FT2_SRC_DIR) otlayout ;

{
  local  _sources ;

  if $(FT2_MULTI)
  {
    _sources = otobjs
               otlayout
               otdriver
               ftxgdef
               ftxgpos
               ftxopen
               ftxgsub
               ot-info
               ot-ruleset
               ot-array
               ot-unicode
               ;
  }
  else
  {
    _sources = ot ;
  }

  Library  $(FT2_LIB) : $(_sources).c ;
}

# end of src/gx Jamfile
